{{ if eq .chezmoi.os "darwin" -}}
eval "$(/opt/homebrew/bin/brew shellenv)"
{{- end }}

if command -v zoxide > /dev/null
    zoxide init fish | source
end

if status is-interactive
    # Commands to run in interactive sessions can go here
    set -g fish_key_bindings fish_vi_key_bindings
end

# Google Cloud SDK path setup
if test -f '/Users/slam/google-cloud-sdk/path.fish.inc'
    source '/Users/slam/google-cloud-sdk/path.fish.inc'
end

# Google Cloud SDK completions
if test -f '/Users/slam/google-cloud-sdk/completion.fish.inc'
    source '/Users/slam/google-cloud-sdk/completion.fish.inc'
end

# uv
fish_add_path "/Users/slam/.local/bin"

alias vi="nvim"

# Claude CLI - run /migrate-installer in Claude Code to install
alias claude="/Users/slam/.claude/local/claude"
